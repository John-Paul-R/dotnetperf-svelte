{
    "extends": "@tsconfig/svelte/tsconfig.json",

    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

    "compilerOptions": {
        "lib": ["DOM", "ES2019", "WebWorker"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importsNotUsedAsValues": "remove",
        "strict": true
    }
}
